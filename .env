# -----------------------------
# FT-XAMPP Docker Environment
# -----------------------------

# --- Main host URL ---
URL=localhost

# --- Container Names ---
APACHE_CONTAINER=ftxampp_apache
MARIADB_CONTAINER=ftxampp_mariadb
PHPMYADMIN_CONTAINER=ftxampp_phpmyadmin
REDIS_CONTAINER=ftxampp_redis
REDIS_INSIGHT_CONTAINER=ftxampp_redisinsight
DASHBOARD_BUILD_CONTAINER=ftxampp_node

# --- Image Versions ---
MARIADB_VERSION=11.4.8
NODE_VERSION=22.20.0-alpine
REDIS_VERSION=7.4.6-alpine
REDIS_INSIGHT_VERSION=2.70.1
PHPMYADMIN_VERSION=5.2.2

# --- Ports ---
APACHE_HTTP_PORT=80
PHPMYADMIN_PORT=8080
REDIS_PORT=6379
REDIS_INSIGHT_PORT=5540

# --- MySQL / MariaDB ---
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=app
MYSQL_USER=app
MYSQL_PASSWORD=app

# --- Redis ---
REDIS_PASSWORD=redis

# --- RedisInsight Auto-Connect ---
# These variables make RedisInsight automatically connect to your Redis instance
RI_ACCEPT_TERMS_AND_CONDITIONS=true
RI_APP_HOST=0.0.0.0
RI_APP_PORT=5540
RI_ENCRYPTION_KEY=please-change-me          # Encryption key for saved credentials
RI_REDIS_ALIAS=Local Redis                  # Display name of the connection
RI_REDIS_HOST=${REDIS_CONTAINER}            # Redis container hostname
RI_REDIS_PORT=6379
RI_REDIS_USERNAME=default                   # Adjust if using ACL users
RI_REDIS_PASSWORD=${REDIS_PASSWORD}
RI_REDIS_DB=0                               # Redis DB index (0â€“15)
RI_REDIS_TLS=FALSE                          # Set TRUE if using TLS/SSL

# --- PHP Debugging / IDE ---
PHP_IDE_CONFIG=serverName=ft-xampp

# --- Node / Dashboard ---
NODE_ENV=production
